{
  "name": "spotify-obs-widget",
  "version": "1.0.0",
  "description": "Widget de Spotify para streaming en OBS",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "keywords": ["spotify", "obs", "widget", "streaming", "bun", "typescript"],
  "author": "Tu nombre",
  "license": "MIT"
}